{
  "name": "aen_tabletop_tooling",
  "version": "1.0.0",
  "repository": "git@github.com:eriwang/aen_tabletop_tooling.git",
  "license": "MIT",
  "scripts": {
    "lint": "yarn eslint --ext .js,.ts .",
    "test": "yarn test:unit && yarn test:firestore",
    "test:unit": "yarn jest --selectProjects functions-unit",
    "test:unit-fast": "yarn test:unit --globals '{\"ts-jest\": { \"isolatedModules\": true } }'",
    "test:firestore": "yarn firebase emulators:exec --only firestore 'yarn jest --selectProjects functions-firestore'",
    "build": "yarn tsc -p functions/",
    "serve-dev": "yarn build && yarn firebase emulators:start",
    "shell": "yarn build && yarn firebase functions:shell",
    "start": "yarn shell",
    "deploy": "yarn firebase deploy --only functions",
    "logs": "yarn firebase functions:log"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "eslint": "7.6.0",
    "eslint-plugin-import": "^2.25.3",
    "firebase-tools": "^9.23.1",
    "jest": "^27.4.4",
    "jest-when": "^3.4.2",
    "typescript": "^4.5.3"
  },
  "dependencies": {
    "ts-jest": "^27.1.1"
  }
}
