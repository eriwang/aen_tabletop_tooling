{
  "functions": {
    "predeploy": [
      "yarn lint",
      "yarn --cwd $Env:RESOURCE_DIR build"
    ],
    "source": "functions/dist"
  },
  "hosting": {
    "public": "web-react/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
